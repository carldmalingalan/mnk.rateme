<% layout("layout") -%>
<div class="d-flex align-items-center">
  <div class="container" style="margin-top: 20px">
    <div class="row">
      <div class="col-12 col-sm-12 col-md-6 col-lg-6 offset-md-3" id="main_con">
        <% if(errors.length) {%>
        <div
          class="alert alert-danger alert-dismissible fade show"
          role="alert"
        >
          <button class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
          </button>

          <% errors.forEach(function(val){ %> <%= val %> <br /><% }) %>
        </div>
        <% } %> <% if(success.length) {%>
        <div
          class="alert alert-success alert-dismissible fade show"
          role="alert"
        >
          <button class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
          </button>
          <% success.forEach(function(val){ %> <%= val %> <% }) %>
        </div>
        <% } %>
        <div class="card">
          <div class="card-body ">
            <form
              method="POST"
              action="/company/add"
              id="form_all"
              enctype="multipart/form-data"
            >
              <div class="form-group">
                <label for="compName">Company Name</label>
                <input
                  type="text"
                  name="name"
                  id="name"
                  class="form-control"
                  placeholder="Company Name"
                />
              </div>
              <div class="form-group">
                <label for="address">Address</label>
                <input
                  type="text"
                  name="address"
                  id="address"
                  class="form-control"
                  placeholder="Address"
                  required
                />
              </div>
              <div class="form-group">
                <label for="city">City</label>
                <input
                  type="text"
                  name="city"
                  id="city"
                  placeholder="City"
                  class="form-control"
                  required
                />
              </div>

              <div class="form-group">
                <label for="country">Country</label>
                <input
                  type="text"
                  name="country"
                  id="country"
                  placeholder="Country"
                  class="form-control"
                  required
                />
              </div>
              <div class="form-group">
                <label for="sector">Sector</label>
                <input
                  type="text"
                  name="sector"
                  id="sector"
                  placeholder="Sector"
                  class="form-control"
                  required
                />
              </div>
              <div class="form-group">
                <label for="website">Website</label>
                <input
                  type="text"
                  name="website"
                  id="website"
                  placeholder="Website"
                  class="form-control"
                  required
                />
              </div>
              <div class="form-group">
                <label for="ci">Company Image</label><br />
                <button class="btn btn-outline-info" type="button" id="ci">
                  Upload
                </button>
                <p class="float-right" id="file_name_upload"></p>
                <input
                  type="file"
                  name="company_image"
                  id="company_image"
                  placeholder="Company Image"
                  style="display:none"
                />
              </div>
              <button class="btn btn-block btn-outline-primary">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(() => {
    $("#file_name_upload").text("");
    $("#ci").on("click", () => {
      $("#company_image").click();
    });

    $("#company_image").on("change", e => {
      $("#file_name_upload").text(e.target.files[0].name);
    });
  });
</script>
