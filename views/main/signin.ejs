<% layout("layout-no-sidebar") %>

<div class="d-flex align-items-center" style="height: 100vh">
  <div class="container">
    <div class="row ">
      <div class="col-12 col-sm-12 col-md-6 col-lg-6 col-xl-6 offset-md-3">
        <% if(errors.length) {%>
        <div
          class="alert alert-danger alert-dismissible fade show"
          role="alert"
        >
          <button class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
          </button>

          <% errors.forEach(function(val){ %> <%= val %> <br /><% }) %>
        </div>
        <% } %> <% if(success.length) {%>
        <div
          class="alert alert-success alert-dismissible fade show"
          role="alert"
        >
          <button class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
          </button>
          <% success.forEach(function(val){ %> <%= val %> <% }) %>
        </div>
        <% } %>
        <form action="/signin" method="POST">
          <div class="card">
            <div class="card-body">
              <span class="text-center">
                <h4>RateMe</h4>
                <br />
                <h6>Sign in</h6>
              </span>

              <a
                href="/auth/facebook"
                target="_blank"
                class="btn btn-outline-info btn-block"
              >
                <i class="fa fa-facebook-square"></i>
                Signin with facebook</a
              >
              <hr />

              <div class="form-group">
                <label for="email" class="bmd-label-floating">Email</label>
                <input
                  type="email"
                  name="email"
                  class="form-control"
                  id="email"
                />
              </div>
              <div class="form-group">
                <label for="password" class="bmd-label-floating"
                  >Password</label
                >
                <input
                  type="password"
                  name="password"
                  class="form-control"
                  id="password"
                />
              </div>
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="remme" value="remme" /> Remember
                  me?</label
                >
              </div>
              <button class="btn btn-block  btn-outline-success" type="submit">
                Login
              </button>
              <br />
              <div>
                <p class="pull-left">
                  Don't have an account yet? <a href="/signup">Sign up</a>
                </p>
                <p class="pull-right"><a href="/forget">Forgot password?</a></p>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
