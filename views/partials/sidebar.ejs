<div class="d-flex" id="wrapper">
  <!-- Sidebar -->
  <div class="bg-light border-right" id="sidebar-wrapper">
    <div class="sidebar-heading">
      <a href="/" style="text-decoration: none; color: black">Rate Me</a>
    </div>
    <div class="list-group list-group-flush">
      <a href="/company" class="list-group-item list-group-item-action bg-light"
        >Companies</a
      >
      <a href="#" class="list-group-item list-group-item-action bg-light"
        >Employees</a
      >
      <a href="#" class="list-group-item list-group-item-action bg-light"
        >Settings</a
      >
    </div>
  </div>
  <!-- /#sidebar-wrapper -->

  <!-- Page Content -->
  <div id="page-content-wrapper">
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
      <button class="btn" id="menu-toggle"><i class="fa fa-bars"></i></button>

      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
          <li class="nav-item dropdown active">
            <a
              href="#"
              class="nav-link dropdown-toggle"
              id="userInfoDropdown"
              role="button"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expand="false"
              ><i class="fa fa-cog"></i>
            </a>
            <div
              class="dropdown-menu dropdown-menu-right"
              aria-labelledby="userInfoDropdown"
            >
              <img
                src="https://via.placeholder.com/100"
                width="50"
                height="50"
                alt="userImage"
                class="d-flex mx-auto rounded-circle"
              />
              <div class="d-flex justify-content-center">
                <small><%= user.username %></small>
              </div>
              <hr />
              <a href="#" class="dropdown-item">Profile</a>
              <a href="/signout" class="dropdown-item">Logout</a>
            </div>
          </li>
        </ul>
      </div>
    </nav>

    <div class="container">
      <%- body -%>
    </div>
  </div>
  <!-- /#page-content-wrapper -->
</div>
